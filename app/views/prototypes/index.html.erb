<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <%if user_signed_in? %>
      <div class="greeting">
        こんにちは、
        <%= link_to "#{current_user.name}さん", root_path, class: :greeting__link %>
      </div>
      <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <%# collectionメソッドを使う事でeachの役割を果たしてくれる
          indexアクションでallメソッドで取得したデータを
          テンプレートないで要素分繰り返してくれる
       %>
      <%= render partial: "prototype", collection: @prototype %>
    </div>
  </div>
</main>
