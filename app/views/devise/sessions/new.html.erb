
<div class="inner">
  <h2>ユーザーログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>（6文字以上）<br />
      <%= f.password_field :password, autocomplete: "メールアドレス" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class:"form__btn" %>
    </div>
  <% end %>

</div>
