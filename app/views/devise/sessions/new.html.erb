<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2>ユーザーログイン</h2>

     <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>（6文字以上）<br />
          <%= f.password_field :password, autocomplete: "メールアドレス" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"form__btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
